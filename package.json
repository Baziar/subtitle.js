{
  "name": "subtitle",
  "version": "0.1.2",
  "description": "Parse and manipulate SRT (SubRip)",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsantiago/subtitle.js"
  },
  "main": "subtitle.js",
  "scripts": {
    "test": "standard subtitle.js && mocha",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha",
    "browserify": "browserify subtitle.js -s Subtitle -o browser/subtitle.browser.js",
    "uglify": "uglifyjs browser/subtitle.browser.js -c -o browser/subtitle.browser.min.js",
    "build": "npm run browserify && npm run uglify"
  },
  "keywords": [
    "subtitle",
    "webvtt",
    "srt",
    "captions",
    "subrip",
    "parser",
    "stringify"
  ],
  "author": "Guilherme Santiago",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^2.2.0",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "standard": "^8.0.0",
    "uglify-js": "^2.7.3",
    "underscore": "^1.8.3"
  },
  "dependencies": {
    "xtend": "^4.0.1"
  }
}
